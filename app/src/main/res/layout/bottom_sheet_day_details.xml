<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/day_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date : "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/week_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semaine type : inconnue"
            android:layout_marginBottom="12dp" />

        <!-- Bouton pour supprimer la semaine type de cette journée -->
        <Button
            android:id="@+id/btn_clear_week_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supprimer la semaine type"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#F87171"
            android:textColor="@android:color/white" />

        <TextView
            android:text="Matin"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/meal_matin"
            android:text="(aucune recette)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_edit_matin"
            android:text="Modifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Midi"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/meal_midi"
            android:text="(aucune recette)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_edit_midi"
            android:text="Modifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Goûter"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/meal_gouter"
            android:text="(aucune recette)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_edit_gouter"
            android:text="Modifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Soir"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/meal_soir"
            android:text="(aucune recette)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_edit_soir"
            android:text="Modifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>
