<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/global_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/recipe_image_fragment"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@drawable/recipe_default"/>

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_marginTop="@dimen/simple_margin"
            android:id="@+id/recipe_name"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="26dp"
            android:textStyle="bold"
            android:maxLines="3"
            android:text="@string/hello_blank_fragment" />
        <TextView
            android:layout_marginTop="@dimen/simple_margin"
            android:id="@+id/recipe_source"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:maxLines="1"
            android:text="Author:" />
        <TextView
            android:layout_marginTop="@dimen/simple_margin"
            android:id="@+id/recipe_time"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:maxLines="1"
            android:drawableLeft="@drawable/baseline_access_time_24"
            android:drawablePadding="@dimen/simple_margin"
            android:text="Time" />
        <TextView
            android:layout_marginTop="@dimen/simple_margin"
            android:id="@+id/recipe_group"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:maxLines="1"
            android:drawableLeft="@drawable/baseline_group_24"
            android:drawablePadding="@dimen/simple_margin"
            android:text="Group" />
        <TextView
            android:layout_marginTop="@dimen/simple_margin"
            android:id="@+id/recipe_cost"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:maxLines="1"
            android:text="$$$" />

        <TextView
            android:layout_marginTop="@dimen/simple_margin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="24dp"
            android:textStyle="bold"
            android:maxLines="1"
            android:text="Ingredients" />
        <LinearLayout
            android:id="@+id/recipe_ingredient_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <TextView
            android:layout_marginTop="@dimen/simple_margin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="24dp"
            android:textStyle="bold"
            android:maxLines="1"
            android:text="Utensils" />
        <LinearLayout
            android:id="@+id/recipe_utensil_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            />

        <TextView
            android:layout_marginTop="@dimen/simple_margin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="24dp"
            android:textStyle="bold"
            android:maxLines="1"
            android:text="Steps" />
        <LinearLayout
            android:id="@+id/recipe_step_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <ImageView
            android:id="@+id/walker_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/miam" />
    </LinearLayout>

</ScrollView>