<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome,"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What do you want to eat today ?"
                android:textSize="16sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/grocery_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grocery List"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/global_margin"
                android:textSize="24sp"/>

            <CheckBox
                android:id="@+id/grocery1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eggplants (2)"/>
            <CheckBox
                android:id="@+id/grocery2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eggs (8)"/>
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carrots (1)"/>

            <TextView
                android:id="@+id/calendar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calendar"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/global_margin"
                android:textSize="24sp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add meal"/>
            <CalendarView
                android:id="@+id/calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minDate="01/04/2025"/>

            <TextView
                android:id="@+id/fav_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Favourites"
                android:textStyle="bold"
                android:textSize="24sp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/fav1"
                android:layout_width="128dp"
                android:layout_height="144dp"
                android:layout_marginTop="@dimen/simple_margin"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>