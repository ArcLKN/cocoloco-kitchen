<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="75dp"
            app:cardElevation="4dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/person" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/username_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="profile.id"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/biography_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enjoy Food to enjoy Life. That's my motto that I believe in with always a glass of wine in my hand ^^"
            android:textSize="16sp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginBottom="40dp" />

        <ImageView
            android:id="@+id/walker_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/walker" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:padding="16dp"
            android:background="#FBA1BC">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Statistics"
                android:textSize="18sp"
                android:fontFamily="@font/matipo"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/stats_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipes created: 12"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/stats_planned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipes planned in calendar: 8"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/stats_favorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favorite recipes: 5"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/stats_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total cooking time: 9 hrs"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="15dp"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Settings"
            android:textSize="20sp"
            android:fontFamily="@font/matipo"
            android:textColor="@color/black"
            android:layout_marginTop="17dp" />

        <RelativeLayout
            android:id="@+id/password_security_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/rounded_background"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/security_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password and security"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/security_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/personal_information_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/rounded_background"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="5dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/personal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Information"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/personal_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="1dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Display"
                android:textSize="20sp"
                android:fontFamily="@font/matipo"
                android:textColor="@color/black"
                android:layout_marginTop="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_background"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Theme :"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="15dp"/>

                <Button
                    android:id="@+id/light_theme_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:minWidth="80dp"
                    android:text="Light"
                    android:backgroundTint="#FBA1BC"
                    android:textSize="13sp"
                    android:paddingHorizontal="12dp" />

                <Button
                    android:id="@+id/Dark_theme_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:minWidth="80dp"
                    android:text="Dark"
                    android:backgroundTint="#FBA1BC"
                    android:textSize="13sp"
                    android:paddingHorizontal="12dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_background"
                android:padding="12dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Text Size :"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="15dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/small_text_button"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:minWidth="80dp"
                            android:text="Small"
                            android:backgroundTint="#FBA1BC"
                            android:textSize="13sp"
                            android:paddingHorizontal="12dp" />

                        <Button
                            android:id="@+id/medium_text_button"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:minWidth="80dp"
                            android:text="Medium"
                            android:backgroundTint="#FBA1BC"
                            android:textSize="13sp"
                            android:paddingHorizontal="12dp"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/large_text_button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:minWidth="170dp"
                        android:text="Large"
                        android:textSize="13sp"
                        android:backgroundTint="#FBA1BC"
                        android:paddingHorizontal="12dp"
                        android:layout_marginTop="6dp"
                        android:layout_gravity="start" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_background"
                android:padding="10dp"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Language :"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="15dp"/>

                <Button
                    android:id="@+id/english_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:minWidth="80dp"
                    android:text="English"
                    android:backgroundTint="#FBA1BC"
                    android:textSize="13sp"
                    android:paddingHorizontal="12dp" />

                <Button
                    android:id="@+id/french_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:minWidth="80dp"
                    android:text="French"
                    android:backgroundTint="#FBA1BC"
                    android:textSize="13sp"
                    android:paddingHorizontal="12dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:textSize="20sp"
                android:fontFamily="@font/matipo"
                android:textColor="@color/black"
                android:layout_marginTop="1dp" />

            <RelativeLayout
                android:id="@+id/app_version_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/rounded_background"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="3dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/app_version_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App Version"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/app_version_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Version 1.0"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dev_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/dev_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Developpers:"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />

                <LinearLayout
                    android:id="@+id/names_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/Julia_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Julia"
                            android:textSize="17sp"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/Joanne_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Joanne"
                            android:textSize="17sp"
                            android:textColor="@android:color/black"
                            android:layout_marginStart="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:id="@+id/Raphael_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Raphaël"
                            android:textSize="17sp"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/Raphaelle_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Raphaëlle"
                            android:textSize="17sp"
                            android:textColor="@android:color/black"
                            android:layout_marginStart="12dp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/links_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/rounded_background"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/links_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Links"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/links_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/Deco_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DECONNEXION"
            android:fontFamily="@font/matipo"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="96dp" />

    </LinearLayout>
</ScrollView>
