<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome Raphaelle,"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What do you want to eat today ?"
                android:textSize="16sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/grocery_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grocery List"
                android:textStyle="bold"
                android:layout_marginTop="28dp"
                android:textSize="24sp"/>

            <CheckBox
                android:id="@+id/grocery1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eggplants (2)"/>
            <CheckBox
                android:id="@+id/grocery2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eggs (8)"
                android:layout_marginTop="-8dp"/>
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carrots (1)"
                android:layout_marginTop="-8dp"/>

            <TextView
                android:id="@+id/calendar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calendar"
                android:textStyle="bold"
                android:layout_marginTop="28dp"
                android:textSize="24sp"/>

            <CalendarView
                android:id="@+id/calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minDate="01/04/2025"/>

            <TextView
                android:id="@+id/fav_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Favourites"
                android:textStyle="bold"
                android:layout_marginTop="28dp"
                android:textSize="24sp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/fav1"
                android:layout_width="128dp"
                android:layout_height="144dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>