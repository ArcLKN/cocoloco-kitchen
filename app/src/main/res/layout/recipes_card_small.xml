<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="6dp"
    android:background="@drawable/rounded_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/simple_margin">

        <ImageView
            android:id="@+id/recipe_image"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/recipe_default"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/simple_margin"
        android:gravity="top">

        <TextView
            android:id="@+id/recipe_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipe Title"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/icon_time"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_time" />

            <TextView
                android:id="@+id/recipe_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="60 min"
                android:layout_marginLeft="@dimen/simple_margin"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/recipe_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/double_margin"
                android:text="$$$"
                android:textSize="14sp"
                />

            <ImageView
                android:id="@+id/icon_people"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/double_margin"
                android:src="@drawable/icon_people" />

            <TextView
                android:id="@+id/recipe_people"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/simple_margin"
                android:text="4"
                android:textSize="14sp"
                />

        </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>